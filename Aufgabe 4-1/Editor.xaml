<Window x:Class="Aufgabe_4_1.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe_4_1"
        mc:Ignorable="d"
        Title="Editor" Height="87.87" Width="280.473"
        >
    <Grid>
        <Label Content="Matrikelnummer" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="103,0,0,0" TextWrapping="Wrap" Text="{Binding MyStudent.Matrikelnummer, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
